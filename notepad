
# ğŸŸ¢ Setup & Configuration                            
git config --global user.name "Your Name"
git config --global user.email "you@example.com"
git config --list                     # Show all configs


#  ğŸ—‚ï¸ Repository Operations
git init                              # Initialize a new repo
git clone <repo-url>                  # Clone existing repo
git status                            # Show changes & branch info


#  ğŸ“¥ Staging & Committing
git add <file>                        # Stage a file
git add .                             # Stage all files
git commit -m "Your message"          # Commit staged changes
git commit --amend                    # Edit last commit

# ğŸ”„ Branching & Merging
git branch                            # List branches
git branch <name>                     # Create new branch
git checkout <branch>                 # Switch branch
git checkout -b <new-branch>          # Create and switch
git merge <branch>                    # Merge branch into current
git rebase <branch>                   # Rebase current onto <branch>


# â¬†ï¸â¬‡ï¸ Remote Repositories
git remote -v                         # List remotes
git remote add origin <url>           # Add remote repo
git push origin <branch>              # Push branch to remote
git push -u origin <branch>           # Push and set upstream
git pull                              # Fetch and merge remote
git fetch                             # Fetch from remote


# ğŸ§¾ Log & History
git log                               # Full commit log
git log --oneline                     # Short log
git log --graph --oneline --all       # Visual branch tree


# â†©ï¸ Undo & Reset
git revert <commit>                   # Undo a commit (safely)
git reset <commit>                    # Unstage commits
git reset --hard <commit>             # Discard commits (dangerous)
git restore <file>                    # Discard changes in a file
git clean -fd                         # Remove untracked files


# ğŸ” Diff & Inspection
git diff                              # Show unstaged changes
git diff --staged                     # Show staged changes
git show <commit>                     # Show changes in a commit


# ğŸ§ª Stash (Temporary Save)
git stash                             # Save changes temporarily
git stash list                        # View stashed changes
git stash apply                       # Reapply last stash
git stash pop                         # Reapply & delete stash

# ğŸ” Tagging
git tag                               # List tags
git tag <tagname>                     # Create a tag
git tag -a <tagname> -m "message"     # Annotated tag
git push origin <tagname>             # Push tag to remote

# ğŸ§¹ Cleanup
git gc                                # Garbage collect
git prune                             # Remove unreachable objects

